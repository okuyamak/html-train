<!DOCTYPE html>
<html>
  <head>
    <title>Naka</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice]%>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<%end%>
<ul>
  <li>
    <%= link_to("練習問題","/year/R01") %>
  </li>
  <% if session[:user_id] %>
  <li>
    <!-- <%= link_to(@current_user.name,"/user/#{@current_user.id}") %> -->
    <%= link_to(@current_user.name,"/") %>
  </li>
  <li>
    <%= link_to("ログアウト","/logout",{method: :post} ) %>
  </li>
  <% else %>
  <li>
    <%= link_to("ログイン","/login") %>
  </li>
  <li>
    <%= link_to("新規登録","/signup") %>
  </li>
</ul>
<% end %>
    <%= yield %>
  </body>
</html>

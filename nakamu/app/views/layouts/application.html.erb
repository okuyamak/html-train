<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "電気工事士"%></title>
    <%= csrf_meta_tags %> <%= csp_meta_tag %>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <%= stylesheet_link_tag 'application', media: 'all',
    'data-turbolinks-track': 'reload' %> <%= include_gon %> <%=
    javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <%end%>
    <nav class="navbar navbar-light bg-light navbar-expand-lg ">
      <a class="navbar-brand" href="#">
        <img
          src="/aaa/sagyouin.png"
          width="50"
          height="50"
          class="d-inline-block align-top"
          alt=""
        />
      </a>

      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#"
              ><%= link_to("HOME","/") %>
              <span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"
              ><%= link_to("練習問題","/quiz/top") %></a
            >
          </li>
          <% if session[:user_id] %>
          <li class="nav-item">
            <a class="nav-link" href="#"
              ><%= link_to(@current_user.name,"/") %></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"
              ><%= link_to("ログアウト","/logout",{method: :post}) %>/a
            >
          </li>
          <% else %>
          <li class="nav-item">
            <a class="nav-link" href="#"
              ><%= link_to("ログイン","/login" ) %></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"
              ><%= link_to("新規登録","/signup" ) %></a
            >
          </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
    <script
    src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
